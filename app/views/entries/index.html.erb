<% total = 0 %>
<% @bar.entries.each do |entry| %>
	<% total = total + entry.entry %>
<% end %>

<h1><%= @bar.name %></h1>
<h3>Total spent: $<%= total %></h3>
<h4>Entries</h4>
<ul>
<% @bar.entries.each do |entry| %>
	<% x = entry.created_at.to_i %>
	<li><h5>$<%= entry.entry.round(2) %></h5></li>
	<li>Created at: <%= Time.at(x).strftime("%B %e, %Y at %I:%M %p") %></li>
<% end %>
<br><br>


<%= button_to 'Back', user_bars_path(@user), :method => 'get' %><br>
<%= button_to 'New Entry!', new_user_bar_entry_path(:bar_id => @bar.id), :method => 'get' %><br>
<%= button_to 'Home!', user_path(@user), :method => 'get' %>